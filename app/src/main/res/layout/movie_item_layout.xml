<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="16dp"
    android:layout_width="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3B3F46"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imagePosterMovie1"
            android:layout_width="108dp"
            android:layout_height="162dp"
            android:src="@drawable/no_poster_available"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/titleMovie1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:text="Title"
            android:textColor="#FED053"
            android:textSize="22sp"
            android:maxLines="3"
            android:ellipsize="end"
            app:layout_constraintWidth_percent="0.7"
            app:layout_constraintStart_toEndOf="@+id/imagePosterMovie1"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/yearMovie1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Year"
            android:textColor="#f9f9f9"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/titleMovie1"
            app:layout_constraintTop_toBottomOf="@+id/titleMovie1" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>